<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="doctorj.mealplan.MainMenuActivity"
    android:background="#d71a1923">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MealPlanList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:contentDescription="@string/Meal_Plan"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:layout_below="@+id/buttonList" />

    <Button
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:text="Meal List"
        android:id="@+id/buttonList"
        android:clickable="false"
        android:layout_row="0"
        android:layout_column="0" />

    <Button
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:text="Create Plan"
        android:id="@+id/CreatePlan"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/MealPlanList"
        android:layout_alignEnd="@+id/MealPlanList"
        android:clickable="true"
        android:onClick="sendMealList"
        android:singleLine="false" />
</RelativeLayout>
