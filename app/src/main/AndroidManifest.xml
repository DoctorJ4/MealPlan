<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="doctorj.mealplan" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/Meal_Plan" >
        </activity>
        <activity
            android:name=".RecipeViewActivity"
            android:label="RecipeViewActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".CalendarView"
            android:label="@string/title_activity_calendar_view"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreatePlanForm"
            android:label="@string/title_activity_create_plan_form" >
        </activity>
        <activity
            android:name=".MealPlanEditActivity"
            android:label="Edit Plan" >
        </activity>
        <activity
            android:name=".RecipeAddViewActivity"
            android:label="RecipeAddViewActivity"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".viewRecipesActivity"
            android:label="@string/title_activity_view_recipes" >
        </activity>
        <activity
            android:name=".GroceryListActivity"
            android:label="@string/title_activity_grocery_list"
            android:launchMode="singleTop" >
        </activity>
    </application>

</manifest>
